extends ../layout

block content
  table(style="width:100%; height:90%;")
    tbody
      each row in gameBoard
        tr
          each column in row
            td(id=column)= column
  if player == 0
    div#status.blue.center Blue starts first!
  else
    div#status.red.center Red starts first!
  script(type="text/javascript", src="/scripts/board.js")
  div#answers.blue= answersBlue
  div#answers.red= answersRed
  div#answers.bomb= bomb